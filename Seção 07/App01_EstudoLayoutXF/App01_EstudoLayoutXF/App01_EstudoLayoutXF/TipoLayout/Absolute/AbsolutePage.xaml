<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_EstudoLayoutXF.TipoLayout.Absolute.AbsolutePage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView BackgroundColor="Black" AbsoluteLayout.LayoutBounds="50, 300, 100, 100" />
            <BoxView BackgroundColor="Blue" AbsoluteLayout.LayoutBounds="70, 320, 100, 100" />

            <BoxView BackgroundColor="Red" AbsoluteLayout.LayoutFlags="HeightProportional" AbsoluteLayout.LayoutBounds="30, 30, 300, 0.3" />
            
            <BoxView BackgroundColor="Yellow" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.1, 300, 100" />
            <BoxView BackgroundColor="Green" AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="400, 30, 0.5, 0.3" />
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>