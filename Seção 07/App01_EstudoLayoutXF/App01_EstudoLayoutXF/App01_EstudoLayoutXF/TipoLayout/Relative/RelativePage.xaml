<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_EstudoLayoutXF.TipoLayout.Relative.RelativePage">
    <ContentPage.Content>
        <RelativeLayout>
            <BoxView x:Name="BlueBox" BackgroundColor="Blue" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.3, Constant=-100}" HeightRequest="100"/>
            <BoxView BackgroundColor="Yellow" HeightRequest="10" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToView, ElementName=BlueBox, Property=Width, Factor=1}"/>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>